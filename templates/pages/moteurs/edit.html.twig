{% extends "base.html.twig" %}

{% block title %}Modification des Moteurs{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Modification des Moteurs</h1>

        <form name="moteur" method="post" enctype="multipart/form-data">
            <div class="form-group">
                {{ form_label(form.marque) }}
                {{ form_widget(form.marque) }}
                <div class="form-error">
                    {{ form_errors(form.marque) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix) }}
                <div class="form-error">
                    {{ form_errors(form.prix) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.ref) }}
                {{ form_widget(form.ref) }}
                <div class="form-error">
                    {{ form_errors(form.ref) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                <div class="form-error">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="form-image">
                {{ form_row(form.imageName) }}
            </div>

            <div class="form-group">
                {{ form_label(form.updateAt) }}
                {{ form_widget(form.updateAt) }}
                <div class="form-error">
                    {{ form_errors(form.updateAt) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.createdAt) }}
                {{ form_widget(form.createdAt) }}
                <div class="form-error">
                    {{ form_errors(form.createdAt) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.cylinder) }}
                {{ form_widget(form.cylinder) }}
                <div class="form-error">
                    {{ form_errors(form.cylinder) }}
                </div>
            </div>

            {{ form_row(form._token) }}

            <button type="submit" id="moteur_submit" name="moteur[submit]" class="btn btn-primary mt-4">Modifier Moteurs</button>
        </form>
    </div>
{% endblock %}
